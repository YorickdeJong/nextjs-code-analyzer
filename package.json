{
  "name": "nextjs_code_analyzer",
  "version": "1.0.0",
  "description": "nextjs_code_analyzer",
  "main": "index.js",
  "scripts": {
    "test:cpp": "cd implementations/cpp/build/tests && ctest",
    "test:ts": "jest",
    "test": "npm run test:cpp && npm run test:ts",
    "parse-data": "cd implementations/typescript/src/out && node index.js",
    "install:ts": "npm install && cd implementations/typescript && cd extensions/nextjs-code-analyzer && npm install && npm install",
    "install:cpp": "cmake-js install -d 'implementations/cpp'",
    "install-packages": "npm run install:ts && npm run install:cpp",
    "build:ts": "cd implementations/typescript/src && npx tsc",
    "build:cpp": "cmake-js build -j8 -d 'implementations/cpp'",
    "build": "npm run build:ts && npm run build:cpp",
    "debug-build": "cmake-js build -g -d 'implementations/cpp' --debug"
  },
  "author": "Yorick de Jong",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "cmake-js": "^7.3.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "contributes": {
    "commands": [
      {
        "command": "nextjs-code-analyzer.helloWorld",
        "title": "nextjs"
      }
    ]
  }
}
