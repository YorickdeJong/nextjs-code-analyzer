{
  "name": "nextjs-code-analyzer",
  "displayName": "NextJS Code Analyzer",
  "description": "Code analyzer and optimizer for nextjs",
  "version": "0.0.12",
  "publisher": "BlueWaterfall",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:next.config.js"
  ],
  "main": "./out/index.js",
  "icon": "images/BlueWaterfall.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/YorickdeJong/nextjs-code-analyzer"
  },
  "contributes": {
    "commands": [
      {
        "command": "nextjsCodeAnalyzer.nextjs",
        "title": "NEXTJS"
      } 
    ],
    "configuration": {
      "title": "NextJS Code Analyzer",
      "properties": {
        "nextjsCodeAnalyzer.ignoreWarnings": {
          "type": "boolean",
          "default": false,
          "description": "Ignore warnings from NextJS Code Analyzer."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "webpack": "webpack --mode none",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "jest"
  },
  "dependencies": {
    "jest": "^29.7.0",
    "@babel/core": "^7.23.9",
    "@babel/parser": "^7.23.9",
    "@vscode/test-electron": "^2.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "vscode": "^1.1.37",
    "vscode-test": "^1.6.1",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4"
  }
}
